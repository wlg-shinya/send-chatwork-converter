{
    "name": "Chatowork's messagelink send chatconv",
    "version": "0.1.0",
    "manifest_version": 3,
    "description": "ChatworkのメッセージのアクションメニューにChatworkコンバーターにリンクを送るアクションを追加します",
    "permissions": [
        "activeTab",
        "background",
        "nativeMessaging",
        "scripting",
        "storage",
        "tabs"
    ],
    "host_permissions": [
        "https://www.chatwork.com/*"
    ],
    "action": {
        "default_icon": {
            "16": "images/icon16.png",
            "24": "images/icon24.png",
            "32": "images/icon32.png"
        },
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.chatwork.com/*"
            ],
            "js": [
                "content-scripts.js"
            ],
            "run_at": "document_start"
        }
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "images/icon16.png"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}